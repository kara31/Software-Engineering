<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="comp3250.hideitlogin.WelcomePage"
    android:orientation="vertical"
    android:background="#ff1d1d1d"
    android:weightSum="1">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="95dp"
        android:background="#ff2a8bff"
        android:id="@+id/grid1">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/welcome"
            android:id="@+id/textView"
            android:layout_row="1"
            android:layout_column="4"
            android:layout_gravity="left|top"
            android:layout_marginTop="30dp"
            android:textColor="#ffffffff" />
    </GridLayout>

    <GridLayout
        android:layout_width="349dp"
        android:layout_height="200dp"
        android:layout_marginTop="10dp"
        android:rowCount="2"
        android:columnCount="2"
        android:id="@+id/grid2"
        android:orientation="horizontal">

        <ImageButton
            android:layout_width="95dp"
            android:layout_height="95dp"
            android:id="@+id/imageView"

            android:layout_marginLeft="35dp"
            android:layout_marginTop="50dp"
            android:background="@drawable/encrypt"/>

        <ImageButton
            android:layout_width="95dp"
            android:layout_height="95dp"
            android:id="@+id/imageView2"
            android:background="@drawable/decrypt"
            android:layout_gravity="right"
            android:layout_marginTop="50dp"
            android:layout_marginRight="35dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Encrypt File"
            android:id="@+id/encrypt"
            android:layout_row="1"
            android:layout_column="0"
            android:textColor="#ffffffff"
            android:layout_gravity="center"
            android:layout_marginLeft="40dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Decrypt File"
            android:id="@+id/decrypt"
            android:layout_row="1"
            android:layout_column="1"
            android:textColor="#ffffffff"
            android:layout_gravity="center|right"
            android:layout_marginRight="40dp" />


    </GridLayout>


    <GridLayout
        android:layout_width="353dp"
        android:layout_height="200dp"
        android:layout_marginTop="20dp"
        android:rowCount="4"
        android:columnCount="2"
        android:id="@+id/grid3"
        android:orientation="horizontal">

        <ImageButton
                android:layout_width="95dp"
                android:layout_height="95dp"
                android:id="@+id/imageView3"
                android:background="@drawable/login_key"
                android:layout_marginLeft="35dp" />

        <ImageButton
            android:layout_width="95dp"
            android:layout_height="95dp"
            android:id="@+id/imageView4"
            android:background="@drawable/delete"
            android:layout_marginRight="35dp"
            android:layout_gravity="right" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Change Password"
            android:id="@+id/changePass"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_gravity="center_horizontal|left"
            android:layout_marginLeft="35dp"
            android:textColor="#ffffffff" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Delete File"
            android:id="@+id/deleteFile"
            android:layout_row="1"
            android:layout_column="1"
            android:layout_gravity="center_horizontal|right"
            android:textColor="#ffffffff"
            android:layout_marginRight="50dp" />

    </GridLayout>


</LinearLayout>
