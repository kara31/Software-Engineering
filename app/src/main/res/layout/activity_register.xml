<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="comp3250.hideitlogin.register"
    android:orientation="vertical"
    android:id="@+id/regLayout"
    android:weightSum="1"
    android:background="@drawable/background">


        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/fullname"
            android:hint="Full Name"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:textColor="#ffffffff"
            android:textColorHint="#ffffffff"
            android:textColorHighlight="#d1b0b0b0" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:hint="Username"
            android:id="@+id/u_name"
            android:layout_marginTop="3dp"
            android:textColorHint="#ffffffff"
            android:textColor="#ffffffff"
            android:textColorHighlight="#d1b0b0b0" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:hint="Email Address           E.g: abc@xyz.com"
            android:id="@+id/email"
            android:layout_marginTop="3dp"
            android:textColorHint="#ffffffff"
            android:textColor="#ffffffff"
            android:textColorHighlight="#d1b0b0b0" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="phone"
            android:ems="10"
            android:id="@+id/phone"
            android:hint="Contact Number       (Optional)"
            android:layout_marginTop="3dp"
            android:textColor="#ffffffff"
            android:textColorHint="#ffffffff"
            android:textColorHighlight="#d1b0b0b0" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:hint="Enter Password"
            android:id="@+id/pass"
            android:layout_marginTop="10dp"
            android:textColorHint="#ffffffff"
            android:textColor="#ffffffff"
            android:textColorHighlight="#d1b0b0b0" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:hint="Verify Password"
            android:id="@+id/pass_verify"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5dp"
            android:textColor="#ffffffff"
            android:textColorHint="#ffffffff"
            android:textColorHighlight="#d1b0b0b0" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/secureQuest"
            android:id="@+id/textView2"
            android:layout_marginTop="25dp"
            android:focusable="true"
            android:textSize="16dp"
            android:textColor="#ffffffff" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/securityQuestionAnswer"
            android:layout_marginTop="5dp"
            android:textColor="#ffffffff"
            android:textColorHighlight="#d1b0b0b0" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/signUp"
            android:id="@+id/signUpButton"
            android:layout_gravity="right"
            android:layout_marginTop="10dp"
            android:onClick="register"/>




</LinearLayout>
